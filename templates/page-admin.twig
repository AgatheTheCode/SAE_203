{% extends "base.twig" %}

{% block main %}
<body>

    <div class="wrapper">

    {% for element in cat %}

        <h2>{{element.titre}}</h2>

        <form action={{element.phpaction}} method="post">
  
            <div class="form-group">
                {% for item in element.form %}
                <label>{{item.nom}}</label>
                <input type="text" name="description_categorie" class="form-control"{{item.phpinput}}></input>
                <span class="invalid-feedback">{{item.phpspan}}</span>
                {% endfor %}
            </div> 


            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Submit">
                <input type="reset" class="btn btn-secondary ml-2" value="Reset">
            </div>
        </form>
    {% endfor %}
    </div>    
</body>
{% endblock main %}